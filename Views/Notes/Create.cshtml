@model ToDoListWebApp.Models.Note

<div class="mt-5 m-5 mb-5">
	<form asp-action="Create">
		<fieldset>
			<legend>Create a new note in ToDo List</legend>
			<div class="form-group">
				<label class="col-sm-2 col-form-label" asp-for="Record"></label>
				<div class="col-sm-10">
					<input type="text" asp-for="Record" />
					<input type="submit" value="Save this shit!" />
				</div>
			</div>
		</fieldset>
	</form>
</div>